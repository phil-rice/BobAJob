<h1>Listing jobs</h1>

<table>
  <tr>
    <th>Punter</th>
    <th>Jobber</th>
    <th>Time</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @jobs.each do |job| %>
  <tr>
    <td><%= job.punter.name %></td>
    <td><%= job.jobber %></td>
    <td><%= job.time %></td>
    <td><%= job.description %></td>
    <td><%= link_to 'Show', job %></td>
    <td><%= link_to 'Edit', edit_job_path(job) %></td>
    <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

 <% if @jobs.empty? %>
  No Jobs Here!
<%end%>
